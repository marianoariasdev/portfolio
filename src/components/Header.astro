---
import { info } from "../info.js";
const { name, title, email, description, social } = info;
---

<header class="flex">
  <div
    class="w-1/3 flex items-center justify-center rounded max-h-[320px] print:max-h-[280px]"
  >
    <img
      src="/Profile.webp"
      alt="Mariano Arias Profile picture"
      class="object-cover h-full w-full print:rounded"
    />
  </div>
  <div class="w-2/3 flex flex-col">
    <div class="text-center flex flex-col justify-center p-6 w-full print:pt-2">
      <h1 class="text-4xl font-bold uppercase hover:tracking-wider transition-all">{name}</h1>
      <h2 class="text-blue-500 font-semibold">{title}</h2>
      <ul class="flex gap-2 mt-6 w-full justify-center print:mt-2">
        {
          email && (
            <li class="bg-gray-100 text-gray-800 px-2 py-1 rounded hover:bg-blue-500 hover:text-white hover:scale-110 hover:rounded-lg transition-all duration-300">
              <a href={`mailto:${email}`} title="Contact">
                {email}
              </a>
            </li>
          )
        }
        <ul class="flex justify-center gap-2">
          {
            social.map(({ name, url }) => (
              <li class="bg-gray-100 text-gray-800 px-2 py-1 rounded hover:bg-blue-500 hover:text-white hover:scale-110 hover:rounded-lg transition-all duration-300">
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  title={`Check out ${name}`}
                >
                  {name}
                </a>
              </li>
            ))
          }
        </ul>
      </ul>
    </div>
    <div
      class="bg-blue-500 text-white flex flex-1 items-center px-6 py-2 w-full print:py-0 print:my-0 print:text-black"
    >
      <p>
        {description}
      </p>
    </div>
  </div>
</header>
