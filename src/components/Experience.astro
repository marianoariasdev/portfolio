---
import Title from "../components/Title.astro";
import { info } from "../info.js";

const { experience } = info;
---

<Title text="Work Experience" />

<ol class="relative border-s border-gray-200 mt-4">
  {
    experience.map((exp) => (
      <li class="mb-6 ms-4">
        <div class="absolute w-3 h-3 bg-blue-500 rounded-full mt-1.5 -start-1.5 border border-white" />
        <time class="mb-1 text-sm font-normal leading-none ">
          {exp.startDate} - {exp.endDate}
        </time>
        <h3 class="text-lg font-semibold">
          {exp.title} | {exp.company}
        </h3>
        <p class="text-base font-normal ">{exp.description}</p>
      </li>
    ))
  }
</ol>
