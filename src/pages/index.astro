---
import Action from "../components/Action.astro";
import Education from "../components/Education.astro";
import Experience from "../components/Experience.astro";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
---

<Layout title="MarianoAriasDEV | Portfolio">
  <main
    class="w-full max-w-[750px] mx-auto my-12 print:m-0 bg-white rounded overflow-hidden shadow-md print:shadow-none"
  >
    <Header title="Portfolio" />
    <div class="flex flex-col sm:flex-row">
      <div class="w-full sm:w-1/3 p-6">
        <Skills />
        <Education />
      </div>
      <div class="w-full sm:w-2/3 px-6 sm:p-6">
        <Projects />
        <Experience />
      </div>
    </div>
    <Action />
  </main>
</Layout>

